<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:gravity="center_horizontal"
        android:text="LOGIN"
        android:textColor="#6750A3"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loginimages_removebg_preview" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58px"
        android:text="Email:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress4"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="85px"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58px"
        android:text="Senha:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextPassword5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="85px"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button7"
        android:layout_width="141dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:layout_marginBottom="150px"
        android:text="LOGAR" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="NÃ£o tenho uma conta"
        android:textSize="16sp" />
</LinearLayout>